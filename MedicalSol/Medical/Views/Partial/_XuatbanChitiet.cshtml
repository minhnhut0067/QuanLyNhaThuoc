                        <span class="input-group-addon" id="@ViewData["page"]_kho_label" style="min-width:90px;">Kho</span>
                        <input id="@ViewData["page"]_kho" type="text" class="form-control input-sm" placeholder="" aria-describedby="@ViewData["page"]_kho_label">
