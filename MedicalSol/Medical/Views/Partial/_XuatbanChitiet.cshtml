                        <input id="@ViewData["page"]_dungkhi" type="text" class="form-control input-sm" placeholder="" aria-describedby="@ViewData["page"]_dungkhi_label">
                        <a href="#" class="input-group-addon" id="@ViewData["page"]_dungkhi_filter"><i class="fa fa-sort-desc"></i></a>
                    </div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7">
                    <div class="input-group" style="margin-left:-15px;">
                        <span class="input-group-addon" id="@ViewData["page"]_cachdung_label" style="min-width:90px;">Cách dùng</span>
                        <input id="@ViewData["page"]_cachdung" type="text" class="form-control input-sm" placeholder="" aria-describedby="@ViewData["page"]_cachdung_label">
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6" style="text-align:left">
                    <input id="@ViewData["page"]_them" type="button" class="btn btn-sm btn-success" value="Thêm" />                   
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6" style="text-align:right">             
                    <input id="@ViewData["page"]_luu" type="button" class="btn btn-sm btn-primary" value="Lưu" />       
                    <input id="@ViewData["page"]_boqua" type="button" class="btn btn-sm btn-info" value="Bỏ Qua" />
                    <input id="@ViewData["page"]_sua" type="button" class="btn btn-sm btn-warning" value="Sữa" />
                    <input id="@ViewData["page"]_xoa" type="button" class="btn btn-sm btn-danger" value="Xóa" />
                    <input id="@ViewData["page"]_ketthuc" type="button" class="btn btn-sm btn-default" value="Kết Thúc" />
