@model IEnumerable<Medical.Models.Data.Kho>
@{
    ViewBag.Title = "Khai Báo Kho";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Custom/Duoc.css" rel="stylesheet" />
@{
    var jss = new System.Web.Script.Serialization.JavaScriptSerializer();
    var dsnhomkhojson = jss.Serialize(ViewBag.dsnhomkho);
}
<div class="container-fluid">
    <div class="row">
        <div class="container-fluid title">Thông tin Kho</div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                    <div class="input-group">
                        <span class="input-group-addon" id="page_duoc_khaibaokho_ma_label" style="min-width:90px;">Mã</span>
                        <input id="page_duoc_khaibaokho_ma" type="text" class="form-control input-sm" placeholder="" aria-describedby="page_duoc_khaibaokho_ma_label">
                    </div>
                </div>
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                    <div class="input-group">
                        <span class="input-group-addon" id="page_duoc_khaibaokho_ten_label" style="min-width:90px;">Tên(*)</span>
                        <input id="page_duoc_khaibaokho_ten" type="text" class="form-control input-sm" placeholder="" aria-describedby="page_duoc_khaibaokho_ten_label">
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="input-group" style="">
                        <span class="input-group-addon" id="page_duoc_khaibaokho_nhomkho_label" style="min-width:90px;">Nhóm kho(*)</span>
                        <input id="page_duoc_khaibaokho_nhomkho_hidden" type="hidden" value="@Html.Raw(dsnhomkhojson)" />
                        <input id="page_duoc_khaibaokho_nhomkho" type="text" class="form-control input-sm" placeholder="" aria-describedby="page_duoc_khaibaokho_nhomkho_label">
                        <a href="#" class="input-group-addon" id="page_duoc_khaibaokho_nhomkho_filter" onclick="filter_click(this)"><i class="fa fa-sort-desc"></i></a>
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="input-group">
                        <span class="input-group-addon" id="page_duoc_khaibaokho_ghichu_label" style="min-width:90px;">Ghi chú</span>
                        <textarea class="form-control" rows="3" id="page_duoc_khaibaokho_ghichu" aria-describedby="page_duoc_khaibaokho_ghichu_label"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div id="page_duoc_khaibaokho_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
    <div class="col-sm-12">
        <table id="page_duoc_khaibaokho_gidview" class="table table-striped table-bordered dataTable" role="grid" aria-describedby="page_duoc_khaibaokho_gidview_info" style="width: 100%;" width="100%" cellspacing="0">
            <thead>
                <tr role="row">
                    <th class="sorting_asc" tabindex="0" aria-controls="page_duoc_khaibaokho_gidview" rowspan="1" colspan="1" style="width: auto;" aria-sort="ascending" aria-label="ID: activate to sort column descending">ID</th>
                    <th class="sorting" tabindex="0" aria-controls="page_duoc_khaibaokho_gidview" rowspan="1" colspan="1" style="width: auto;" aria-label="Nhóm: activate to sort column ascending">Nhóm</th>
                    <th class="sorting" tabindex="0" aria-controls="page_duoc_khaibaokho_gidview" rowspan="1" colspan="1" style="width: auto;" aria-label="Mã: activate to sort column ascending">Mã</th>
                    <th class="sorting" tabindex="0" aria-controls="page_duoc_khaibaokho_gidview" rowspan="1" colspan="1" style="width: auto;" aria-label="Tên: activate to sort column ascending">Tên</th>
                    <th class="sorting" tabindex="0" aria-controls="page_duoc_khaibaokho_gidview" rowspan="1" colspan="1" style="width: auto;" aria-label="Ghi chú: activate to sort column ascending">Ghi chú</th>
                </tr>
            </thead>
            @*<tfoot>
                    <tr>
                        <th rowspan="1" colspan="1">Name</th>
                        <th rowspan="1" colspan="1">Position</th>
                        <th rowspan="1" colspan="1">Office</th>
                        <th rowspan="1" colspan="1">Age</th>
                        <th rowspan="1" colspan="1">Start date</th>
                    </tr>
                </tfoot>*@
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.id_nhomkho</td>
                        <td>@item.ma</td>
                        <td>@item.ten</td>
                        <td>@item.ghichu</td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
<script type="text/javascript">
    var dsnhomkho = JSON.parse('@Html.Raw(dsnhomkhojson)');
</script>
<script src="~/Scripts/Custom/Duoc.js"></script>