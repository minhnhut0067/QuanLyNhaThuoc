@using Newtonsoft.Json;
@model IEnumerable<Medical.Models.Data.Kho>
@{
    ViewData["title"] = "Khai Báo Kho";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Custom/Duoc.css" rel="stylesheet" />
<div class="container-fluid">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#thonhtin" aria-controls="thonhtin" role="tab" data-toggle="tab">Thông tin chi tiết</a></li>
        <li role="presentation"><a href="#danhsach" aria-controls="danhsach" role="tab" data-toggle="tab">Danh sách</a></li>
        @*<li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Messages</a></li>
            <li role="presentation"><a href="#settings" aria-controls="settings" role="tab" data-toggle="tab">Settings</a></li>*@
    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane fade in active" id="thonhtin">
            <div class="row custom-row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="container-fluid custom-title">Thông tin kho</div>
                </div>
            </div>
            <div class="row custom-row">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                    <div class="input-group">
                        <script type="text/javascript">
                            document.write(f_create_input("@ViewData["page"]_ma", "input", "Mã"));
                        </script>
                    </div>
                </div>
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                    <div class="input-group">
                        <script type="text/javascript">
                            document.write(f_create_input("@ViewData["page"]_ten", "input", "Tên(*)"));
                        </script>
                    </div>
                </div>
            </div>
            <div class="row custom-row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="input-group" style="">
                        <script type="text/javascript">
                            document.write(f_create_input("@ViewData["page"]_nhomkho", "filter", "Nhóm kho(*)"));
                        </script>
                    </div>
                </div>
            </div>
            <div class="row custom-row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="input-group">
                        <script type="text/javascript">
                            document.write(f_create_input("@ViewData["page"]_ghichu", "textarea", "Ghi chú"));
                        </script>
                    </div>
                </div>
            </div>
            <div class="row custom-row custom-btn-group">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align:right">
                    <script type="text/javascript">
                        document.write(f_create_btn_group("@ViewData["page"]", "themmoi~luu~boqua~sua~xoa~ketthuc", "primary~primary~primary~primary~primary~primary", "Thêm mới~Lưu~Bỏ Qua~Sữa~Xóa~Kết Thúc"));//success~primary~info~warning~danger~default
                    </script>
                </div>
            </div>
        </div>
        <div role="tabpanel" class="tab-pane fade" id="danhsach">
            <div class="row custom-row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="container-fluid custom-title">Danh sách kho</div>
                </div>
            </div>
            <div class="row custom-row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="row">
                        <script type="text/javascript">
                            document.write(f_create_table_html('@Html.Raw(JsonConvert.SerializeObject(Model).Replace("'", "\\'"))', "@ViewData["page"]", "ID~Nhóm~Mã~Tên~Ghi chú", "id~nhomkho~ma~ten~ghichu", false));
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/Scripts/Custom/Duoc.js"></script>
