@using Newtonsoft.Json;
@model IEnumerable<Medical.Models.Data.Kho>
@{
    ViewData["title"] = "Khai Báo Kho";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Custom/Duoc.css" rel="stylesheet" />
<div class="container-fluid">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation"><a href="#thonhtin" aria-controls="thonhtin" role="tab" data-toggle="tab" onclick="f_tab_click(this, 'khos', false)">Thông tin Kho</a></li>
        <li role="presentation" class="active"><a href="#danhsach" aria-controls="danhsach" role="tab" data-toggle="tab" onclick="f_tab_click(this, 'khos', true)">Danh sách Kho</a></li>
    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane fade" id="thonhtin">
            <div class="row custom-row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="container-fluid custom-title">Thông tin kho</div>
                </div>
            </div>
            <div class="row custom-row">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="input-group">
                        <script type="text/javascript">
                            document.write(f_create_input("@ViewData["page"]_ma", "input", "Mã", ""));
                        </script>
                    </div>
                </div>
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                    <div class="input-group">
                        <script type="text/javascript">
                            document.write(f_create_input("@ViewData["page"]_ten", "input", "Tên(*)", "text-transform: capitalize;"));
                        </script>
                    </div>
                </div>
            </div>
            <div class="row custom-row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="input-group" style="">
                        <script type="text/javascript">
                            document.write(f_create_input("@ViewData["page"]_nhomkho", "filter", "Nhóm kho(*)", ""));
                        </script>
                    </div>
                </div>
            </div>
            <div class="row custom-row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="input-group">
                        <script type="text/javascript">
                            document.write(f_create_input("@ViewData["page"]_ghichu", "textarea", "Ghi chú", ""));
                        </script>
                    </div>
                </div>
            </div>
            <div class="row custom-row custom-btn-group">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align:right">
                    <script type="text/javascript">
                        document.write(f_create_btn_group("@ViewData["page"]", "themmoi~luu~boqua~sua~xoa~ketthuc", "primary~primary~primary~primary~primary~primary", "Thêm mới~Lưu~Bỏ Qua~Sữa~Xóa~Kết Thúc"));//success~primary~info~warning~danger~default
                    </script>
                </div>
            </div>
        </div>
        <div role="tabpanel" class="tab-pane fade in active" id="danhsach">
            <div class="row custom-row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="container-fluid custom-title">Danh sách kho</div>
                </div>
            </div>
            <div class="row custom-row custom-btn-group" style="margin-top:0">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align:left">
                    <script type="text/javascript">
                        document.write(f_create_btn_group("@ViewData["page"]_ds", "themmoi", "primary~primary", "Thêm kho"));//success~primary~info~warning~danger~default
                    </script>
                </div>
            </div>
            <div class="row custom-row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="row" id="@ViewData["page"]_ds">
                        <div class="loader"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    jQuery(document).ready(function () {        
        f_table_reload("khos");
        $('#page_duoc_khaibaokho_gidview').DataTable();
        $('#page_duoc_khaibaokho_gidview').parent().css("overflow-x", "scroll");
        khaibaokho_enable(false);
    });
</script>
<script type="text/javascript" src="~/Scripts/Custom/Duoc.js"></script>
