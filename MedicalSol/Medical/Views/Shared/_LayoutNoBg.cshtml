<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["title"]</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @{

        if (Session["User_name"] != null)
        {
            Response.Redirect("~/Trangchu/Index");
        }
    }
    @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>    
    <div id="notice" class="alert col-lg-12 col-md-12 col-sm-12 col-xs-12 fade">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    </div>
    @RenderBody()
    
    @RenderSection("scripts", required: false)
</body>
</html>
<script type="text/javascript">
    jQuery(document).ready(function () {
        $('#notice').append('@ViewData["message"]');
        if ("@ViewData["alert"]" != null && "@ViewData["alert"]" != "") {
            $('#notice').children().last().removeClass("field-validation-error");
            $('#notice').addClass("@ViewData["alert"]");
            $('#notice').children().last().css("font-size", "20px");
            $('#notice').css("font-size", "20px");
            $('#notice').addClass("in");
        }
        setTimeout(function () { $('#notice').removeClass("in"); }, 3000);
    });
</script>
<script type="text/javascript" src="~/Scripts/Custom/Dungchung.js"></script>
