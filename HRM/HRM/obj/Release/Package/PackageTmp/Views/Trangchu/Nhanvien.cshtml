@model HRM.Models.Data.Phongban
@{
    ViewBag.Title = "Nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Custom/Trangchu.css" rel="stylesheet" />
<div class="container-fluid">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation"><a href="#thonhtin" aria-controls="thonhtin" role="tab" data-toggle="tab" onclick="f_tab_click(this, 'nhanviens', false)">Chi tiết</a></li>
        <li role="presentation" class="active"><a href="#danhsach" aria-controls="danhsach" role="tab" data-toggle="tab" onclick="f_tab_click(this, 'nhanviens', true)">Danh sách</a></li>
    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane fade" id="thonhtin">
            <div class="row custom-row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="container-fluid custom-title">Thông tin nhân viên</div>
                </div>
            </div>
            <div class="row custom-row">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="input-group">
                        <script type="text/javascript">
                            document.write(f_create_input("@ViewData["page"]_id", "input", "ID", ""));
                        </script>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="input-group">
                        <script type="text/javascript">
                            document.write(f_create_input("@ViewData["page"]_hoten", "input", "Họ Tên(*)", "text-transform: capitalize;"));
                        </script>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="input-group">
                        <script type="text/javascript">
                            document.write(f_create_input("@ViewData["page"]_phai", "filter", "Phái", ""));
                        </script>
                    </div>
                </div>
            </div>
            <div class="row custom-row">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="input-group">
                        <script type="text/javascript">
                            document.write(f_create_input("@ViewData["page"]_ngaysinh", "input", "Ngày sinh", ""));
                        </script>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="input-group">
                        <script type="text/javascript">
                            document.write(f_create_input("@ViewData["page"]_namsinh", "input", "Năm sinh", ""));
                        </script>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="input-group">
                        <script type="text/javascript">
                            document.write(f_create_input("@ViewData["page"]_sdt", "input", "SĐT", ""));
                        </script>
                    </div>
                </div>
            </div>
            <div class="row custom-row">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="input-group">
                        <script type="text/javascript">
                            document.write(f_create_input("@ViewData["page"]_email", "input", "E-mail", ""));
                        </script>
                    </div>
                </div>
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                    <div class="input-group">
                        <script type="text/javascript">
                            document.write(f_create_input("@ViewData["page"]_diachi", "input", "Địa chỉ", ""));
                        </script>
                    </div>
                </div>
            </div>
            <div class="row custom-row">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="input-group">
                        <script type="text/javascript">
                            document.write(f_create_input("@ViewData["page"]_phongban", "filter", "Phòng ban", ""));
                        </script>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="input-group">
                        <script type="text/javascript">
                            document.write(f_create_input("@ViewData["page"]_capbac", "input", "Cấp bậc", ""));
                        </script>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="input-group">
                        <script type="text/javascript">
                            document.write(f_create_input("@ViewData["page"]_mucluong", "input", "Mức lương", ""));
                        </script>
                    </div>
                </div>
            </div>
            <div class="row custom-row custom-btn-group">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align:right">
                    <script type="text/javascript">
                        document.write(f_create_btn_group("@ViewData["page"]", "themmoi~luu~boqua~sua~xoa~ketthuc", "primary~primary~primary~primary~primary~primary", "Thêm mới~Lưu~Bỏ Qua~Sữa~Xóa~Kết Thúc"));//success~primary~info~warning~danger~default
                    </script>
                </div>
            </div>
        </div>
        <div role="tabpanel" class="tab-pane fade in active" id="danhsach">
            <div class="row custom-row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="container-fluid custom-title">Danh sách nhân viên</div>
                </div>
            </div>
            <div class="row custom-row custom-btn-group" style="margin-top:0">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align:left">
                    <script type="text/javascript">
                        document.write(f_create_btn_group("@ViewData["page"]_ds", "themmoi", "primary~primary", "Thêm nhân viên"));//success~primary~info~warning~danger~default
                    </script>
                </div>
            </div>
            <div class="row custom-row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="row" id="@ViewData["page"]_ds">
                        <div class="loader"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    jQuery(document).ready(function () {
        f_table_reload("nhanviens");
        khaibaonhanvien_enable(false);
    });
</script>
<script type="text/javascript" src="~/Scripts/Custom/Trangchu.js"></script>
